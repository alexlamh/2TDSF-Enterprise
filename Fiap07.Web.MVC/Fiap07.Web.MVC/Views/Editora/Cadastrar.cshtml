@model Fiap07.Web.MVC.ViewModel.EditoraViewModel

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastro de Editora</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">@TempData["msg"]</div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(e => e.Nome)
        @Html.TextBoxFor(e => e.Nome, new { @class = "form-control" })
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-primary" />
}

<h2>Lista de Editoras</h2>
<table class="table">
    <tr>
        <th>Código</th>
        <th>Nome</th>
    </tr>
    @foreach (var item in Model.Editoras)
    {
        <tr>
            <td>@item.EditoraId</td>
            <td>@item.Nome</td>
        </tr>
    }
</table>

