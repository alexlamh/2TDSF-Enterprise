@model Fiap07.Web.MVC.ViewModel.LivroViewModel

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastro de Livro</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(l => l.Titulo)
        @Html.TextBoxFor(l => l.Titulo, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(l  => l.Paginas)
        @Html.TextBoxFor(l => l.Paginas, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(l => l.EditoraId)
        @Html.DropDownListFor(l => l.EditoraId,
            Model.Editoras, "Selecione", new { @class = "form-control" })
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-primary" />
}

